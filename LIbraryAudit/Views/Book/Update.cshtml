@model LIbraryAudit.Models.Book

<br />
<h2 class="text-info">Update Book</h2>
<br />

<div class="border container" style="padding:10px;">
    <form asp-action="Update" asp-controller="Book" method="post">

       
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Id"></label>
            </div>
            <div class="col-6">
                <input asp-for="Id" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                </div>
            
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Update Book
                    </button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success form-control">Back to library</a>
                </div>
            </div>

</form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}